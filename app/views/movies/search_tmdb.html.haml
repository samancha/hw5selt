-#  This file is app/views/movies/search_tmdb.html.haml
%h1 The following movies '#{@search_term}' were found on TMDB

= form_tag movies_add_tmdb_path, :method => :add_tmdb, :id => 'movies_selected_form' do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select
    %tbody
      - @matching_movies.each do |movie|
        %tr
          %td= movie[:title]
          %td= movie[:ratings]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]"

  = submit_tag 'Add Selected Movies', :id => 'movies_selected_submit'
= link_to 'Return to Movie List', movies_path  
